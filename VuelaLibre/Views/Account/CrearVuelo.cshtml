<body class="registro">
    <div class="tm-section tm-bg-img" id="tm-section-1">
        <div class="container text-md-center">
            <div class="row justify-content-center pt-5 mt-5 mr-1">
                <div class="col-md-4 formulario">
                    <form action="/account/crearvuelo" method="post">
                        <div class="form-group text-center">
                            <h3 class="titulo">Crear Vuelos </h3>
                        </div>
                        <div class="form-group mx-sm-4 ">
                            <input type="text" name="Origen" class="form-control" placeholder="Origen" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="Destino" class="form-control" placeholder="Destino" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="Aerolinea" class="form-control" placeholder="Aerolinea" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="Fecha_Hora" class="form-control" placeholder="Fecha/HoraVuelo" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="TiempoVuelo" class="form-control" placeholder="Tiempo de Vuelo" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="TotalPasaje" class="form-control" placeholder="Total de pasajes" />
                        </div>
                        <div class="form-group mx-sm-4 pt-4">
                            <input type="text" name="Precio" class="form-control" placeholder="Precio" />
                        </div>
                        <div class="form-group mx-sm-4 pb-1">
                            <input type="submit" class="btn btn-block registrara" value="Crear" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

